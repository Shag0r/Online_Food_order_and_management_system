@page
@model Restrunant.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <div class="border text-center p-3 mt-4 shadow-lg rounded bg-secondary">
        <div class="row pb-2">
            <h2 class="text-body pt-3">Delete Category</h2>
            <hr />
        </div>
        <input type="number" asp-for="Category.Id" hidden />
        <div class="d-flex w-100 gap-2">
            <div class="mb-3 w-50">
                <label asp-for="Category.Name">Name</label>
                <input class="form-control" type="text" asp-for="@Model.Category.Name" readonly />
                <span asp-validation-for="Category.Name"></span>

            </div>
            <div class="mb-3  w-50 ">
                <label asp-for="Category.DisplayOrder">Display Order</label>
                <input type="text" class="form-control" asp-for="@Model.Category.DisplayOrder" readonly />
                <span asp-validation-for="Category.DisplayOrder"></span>
            </div>
        </div>

        <div class="d-flex  justify-content-between gap-2">
            <button type="submit" class="btn btn-success w-50">Delete</button>
            <a type="submit" asp-page="Index" class="btn btn-outline-light w-50"> <i class="bi bi-signpost-2"></i>Back to List</a>
      </div>
        
    </div>
</form>