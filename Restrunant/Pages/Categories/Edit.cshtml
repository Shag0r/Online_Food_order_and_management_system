@page
@model Restrunant.Pages.Categories.EditModel
@{
}
<partial name="_Notification"/>

<form method="post">
    <div class="border text-center p-3 mt-4 shadow-lg rounded bg-secondary">
        <div class="row pb-2">
            <h2 class="text-body pt-3">Edit Category</h2>
            <hr />
        </div>
        <div class="d-flex w-100 gap-2">
            <div class="mb-3 w-50">
                <label asp-for="Category.Name">Name</label>
                <input class="form-control" type="text" asp-for="@Model.Category.Name" />
                <span asp-validation-for="Category.Name"></span>

            </div>
            <div class="mb-3  w-50 ">
                <label asp-for="Category.DisplayOrder">Display Order</label>
                <input type="text" class="form-control" asp-for="@Model.Category.DisplayOrder" />
                <span asp-validation-for="Category.DisplayOrder"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-success w-50">Update</button>

    </div>
</form>